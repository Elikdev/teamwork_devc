{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "arrow-parens": "off",
        "comma-dangle": 0,
        "linebreak-style": 0,
        "arrow-body-style": "off",
        "consistent-return": 0,
        "no-restricted-globals": 0,
        "import/no-dynamic-require": "off",
        "import/no-extraneous-dependencies": "off"
    }
}